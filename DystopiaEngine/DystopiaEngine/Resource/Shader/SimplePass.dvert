#version 410 core

out gl_PerVertex
{
  vec4 gl_Position;
};

uniform mat4 MVP;

layout(location = 0) in vec3 vertexPos;
layout(location = 2) in vec2 vertexUV;

layout(location = 0)out vec3 vPosition;
layout(location = 2)out vec2 vUV;

void main()
{
  gl_Position = MVP * vec4(vertexPos, 1.f);
  vPosition   = gl_Position.xyz;
  vUV         = vertexUV;
}

