#version 330 core

in vec3 vPosition;
in vec3 vNormal;
in vec2 vUV;

layout(location = 0) out vec4 fragColor;

uniform float Gamma;
uniform sampler2D texGame;
uniform sampler2D texUI;


void main()
{
  // Ignore colour blending for now
  vec4 color1 = texture(texGame, vUV);
  vec4 color2 = texture(texUI, vUV);
  
  color1 = mix(color2, color1, color2.a);
  
  // Gamma correction
  //color1.rgb = pow(color1.rgb, vec3(1.f / Gamma));
  
  fragColor = color1;
}

